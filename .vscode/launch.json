{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach GDB Linux Native",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
            "name": "Attach GDB WSL",
            "type": "cppdbg",
            "request": "attach",
            "program": "/mnt/c/Users/Christoph/Documents/Studium/5_WS1718/TSISIM/Tutorium/SWEGUI/build/swegui",
            "processId": "${command:pickRemoteProcess}",
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }, 
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "c:/windows/sysnative/bash.exe",
                "pipeArgs": [ "-c" ],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "c:/"
            }
        }
    ]
}